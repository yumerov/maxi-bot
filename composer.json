{
    "name": "yumerov/maxi-bot",
    "description": "Bitcoin related Discord bot",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Yumerov\\MaxiBot\\": "src/",
            "Yumerov\\MaxiBot\\Mocks\\": "tests/Mocks/"
        },
        "files": ["src/functions.php"]
    },
    "authors": [
        {
            "name": "Levent Yumerov",
            "email": "levent@yumerov.com"
        }
    ],
    "config": {
        "platform": {
            "php": "8.2"
        },
        "platform-check": true,
        "platform-check-depth": "all"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "test-covertage": [
            "bash test-coverage.sh"
        ],
        "tc": [
            "@test-covertage"
        ],
        "style": [
            "phpcs",
            "phpstan analyse"
        ],
        "quality": [
            "@style",
            "@test-covertage",
            "echo \"Everything is electricity and cable\""
        ]
    },
    "require": {
        "team-reflex/discord-php": "^7.3",
        "monolog/monolog": "^3.3",
        "symfony/dependency-injection": "^6.2",
        "symfony/config": "^6.2",
        "symfony/yaml": "^6.2",
        "symfony/dotenv": "^6.2"
    }
}
